# Backend Environment Configuration
# Copy this file to .env and update the values as needed

# Server Configuration
PORT=3001
NODE_ENV=development

# For Cloudflare tunnel (override the localhost fallback)
FRONTEND_URL=https://havruta.daviddusi.com

# For local development, comment out FRONTEND_URL to use localhost fallback
# FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/havruta_db"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRES_IN=7d

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Sefaria API
SEFARIA_API_BASE_URL=https://www.sefaria.org/api

# Email Configuration (for invitations)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@havruta.app