# Production Environment Configuration
# This file contains template values - actual secrets should be set via CI/CD or secrets management

# Application
NODE_ENV=production
PORT=3000
API_PORT=5000

# Database Configuration
DATABASE_URL=postgresql://username:password@postgres:5432/havruta_prod
POSTGRES_DB=havruta_prod
POSTGRES_USER=havruta_user
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION

# Redis Configuration
REDIS_URL=redis://:password@redis:6379
REDIS_PASSWORD=CHANGE_ME_IN_PRODUCTION

# Authentication
JWT_SECRET=CHANGE_ME_IN_PRODUCTION_LONG_RANDOM_STRING
JWT_EXPIRES_IN=7d

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=CHANGE_ME_IN_PRODUCTION
OAUTH_CALLBACK_URL=https://your-domain.com/api/auth/callback

# Email Service
EMAIL_SERVICE_API_KEY=CHANGE_ME_IN_PRODUCTION
EMAIL_FROM_ADDRESS=noreply@your-domain.com
EMAIL_FROM_NAME=Havruta Platform

# External APIs
SEFARIA_API_BASE_URL=https://www.sefaria.org/api

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
MONITORING_ENDPOINT=https://your-monitoring-service.com/webhook

# Security
CORS_ORIGIN=https://your-domain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Performance
MAX_CONCURRENT_SESSIONS=1000
SESSION_CLEANUP_INTERVAL=300000

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=havruta-backups